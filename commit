#!/bin/sh

usage()
{
        echo "usage: $(basename $0) pkgpath [version] [release]" >&2
}

if test $# -lt 1 -o $# -gt 2
then
        usage
        exit 1
fi

pkgpath=$1
version=$2
release=$3

if test "$pkgpath" = "."
then
    pkgname=${PWD##*/}
else
    pkgname=${pkgpath##*/}
fi

if test -z "$version"
then
        version=$(sed -n 's/^pkgver=\([0-9.]\+\)/\1/p' $pkgpath/PKGBUILD)
fi

if test -z "$release"
then
        release=$(sed -n 's/^pkgrel=\([0-9]\+\)/\1/p' $pkgpath/PKGBUILD)
fi


git add $pkgpath
git commit -m "$pkgname $version-$release"
